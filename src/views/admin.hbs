<div class='container'>
    <!-- Header Section -->
    <div class='header'>
        <h1>Admin Panel</h1>
    </div>

    <!-- Messages Section -->
    <section class='section'>
        <h2>Messages</h2>
        <p>Here are the latest messages submitted through the contact form:</p>

        <!-- Message List -->
        {{#each contacts}}
        <div class='message-list'>
            <div class='message-item'>
                <h3>{{name}}</h3>
                <p><strong>Email:</strong> {{email}}</p>
                <p><strong>Message:</strong> "{{message}}"</p>
                <p><strong>Sent on:</strong> {{date}}</p>
                <button class='btn btn-delete'>Delete</button>
            </div>
        {{/each}}
        </div>
    </section>

</div>